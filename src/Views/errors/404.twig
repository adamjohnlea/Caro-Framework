{% extends "layouts/base.twig" %}

{% block title %}Not Found - {{ appName }}{% endblock %}

{% block page_header %}
    <h1 class="text-sm font-semibold text-text-primary">Not Found</h1>
{% endblock %}

{% block content %}
<div class="max-w-md mx-auto text-center py-16">
    <p class="text-6xl font-bold text-text-muted mb-4">404</p>
    <p class="text-sm text-text-secondary mb-6">The page you're looking for doesn't exist.</p>
    <a href="/" class="inline-flex items-center px-4 py-2 text-sm font-medium text-surface-raised bg-accent hover:bg-accent-hover rounded-lg transition-colors">
        Back to Dashboard
    </a>
</div>
{% endblock %}
