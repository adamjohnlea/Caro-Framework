<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ appName }}{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <script defer src="{{ asset('js/alpine.min.js') }}"></script>
    {% block head %}{% endblock %}
</head>
<body class="bg-surface min-h-screen" x-data="{ sidebarOpen: localStorage.getItem('sidebarOpen') !== 'false' }" x-init="$watch('sidebarOpen', val => localStorage.setItem('sidebarOpen', val))">

    {# --- Sidebar --- #}
    <aside
        class="fixed inset-y-0 left-0 z-30 bg-sidebar flex flex-col sidebar-transition overflow-hidden"
        :class="sidebarOpen ? 'w-60' : 'w-16'"
    >
        {# Logo #}
        <div class="flex items-center h-14 border-b border-sidebar-border" :class="sidebarOpen ? 'px-5' : 'px-0 justify-center'">
            <a href="{{ path('home') }}" class="flex items-center gap-3 min-w-0">
                <svg class="shrink-0 w-6 h-6 text-sidebar-text-active" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
                <span class="text-sm font-semibold text-sidebar-text-active whitespace-nowrap" x-show="sidebarOpen" x-cloak x-transition.opacity.duration.150ms>{{ appName }}</span>
            </a>
        </div>

        {# Navigation #}
        <nav class="flex-1 py-4 space-y-1" :class="sidebarOpen ? 'px-3' : 'px-2'">
            {% set nav_items = [{url: path('home'), label: 'Dashboard', icon: 'dashboard'}] %}

            {% if authEnabled is defined and authEnabled %}
                {% set nav_items = nav_items|merge([{url: path('users.index'), label: 'Users', icon: 'users'}]) %}
            {% endif %}

            {% for item in nav_items %}
            {% set is_active = active_nav is defined and active_nav == item.icon %}
            <a href="{{ item.url }}"
               class="flex items-center gap-3 rounded-lg text-[13px] font-medium transition-colors duration-150 {{ is_active ? 'text-sidebar-text-active bg-sidebar-hover' : 'text-sidebar-text hover:text-sidebar-text-active hover:bg-sidebar-hover' }}"
               :class="sidebarOpen ? 'px-3 py-2' : 'px-0 py-2 justify-center'"
            >
                {% if item.icon == 'dashboard' %}
                    <svg class="shrink-0 w-[18px] h-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/><rect x="14" y="14" width="7" height="7" rx="1"/></svg>
                {% elseif item.icon == 'users' %}
                    <svg class="shrink-0 w-[18px] h-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                {% endif %}
                <span class="whitespace-nowrap" x-show="sidebarOpen" x-cloak x-transition.opacity.duration.150ms>{{ item.label }}</span>
            </a>
            {% endfor %}
        </nav>

        {# Footer: user + collapse #}
        <div class="border-t border-sidebar-border" :class="sidebarOpen ? 'p-3' : 'p-2'">
            {% if currentUser is defined and currentUser %}
            <div class="flex items-center gap-3 mb-2" :class="sidebarOpen ? 'px-3 py-2' : 'px-0 py-2 justify-center'">
                <span class="shrink-0 flex items-center justify-center w-[18px] h-[18px] rounded-full bg-sidebar-hover text-[10px] font-bold text-sidebar-text-active">{{ currentUser.email.value|first|upper }}</span>
                <span class="text-[12px] text-sidebar-text truncate" x-show="sidebarOpen" x-cloak x-transition.opacity.duration.150ms>{{ currentUser.email.value }}</span>
            </div>
            <a href="{{ path('logout') }}"
               class="flex items-center gap-3 w-full rounded-lg text-[13px] font-medium text-sidebar-text hover:text-sidebar-text-active hover:bg-sidebar-hover transition-colors duration-150 mb-2"
               :class="sidebarOpen ? 'px-3 py-2' : 'px-0 py-2 justify-center'"
            >
                <svg class="shrink-0 w-[18px] h-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
                <span class="whitespace-nowrap" x-show="sidebarOpen" x-cloak x-transition.opacity.duration.150ms>Logout</span>
            </a>
            {% endif %}
            <button
                @click="sidebarOpen = !sidebarOpen"
                class="flex items-center gap-3 w-full rounded-lg text-[13px] font-medium text-sidebar-text hover:text-sidebar-text-active hover:bg-sidebar-hover transition-colors duration-150"
                :class="sidebarOpen ? 'px-3 py-2' : 'px-0 py-2 justify-center'"
            >
                <svg class="shrink-0 w-[18px] h-[18px] transition-transform duration-200" :class="sidebarOpen ? '' : 'rotate-180'" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M9 3v18"/><path d="m14 9-3 3 3 3"/></svg>
                <span class="whitespace-nowrap" x-show="sidebarOpen" x-cloak x-transition.opacity.duration.150ms>Collapse</span>
            </button>
        </div>
    </aside>

    {# --- Main Content --- #}
    <main
        class="min-h-screen content-transition"
        :class="sidebarOpen ? 'ml-60' : 'ml-16'"
        role="main"
    >
        {# Top bar #}
        <header class="h-14 border-b border-border flex items-center justify-between px-8">
            <div>
                {% block page_header %}{% endblock %}
            </div>
            <div class="flex items-center gap-4">
                {% block page_actions %}{% endblock %}
            </div>
        </header>

        {# Flash messages #}
        {% if has_flash() %}
            <div class="px-8 pt-4">
                {% for message in flash_messages() %}
                    <div class="mb-2 px-4 py-3 rounded-lg text-sm {% if message.type == 'success' %}bg-emerald-50 text-emerald-800 border border-emerald-200{% elseif message.type == 'error' %}bg-red-50 text-red-800 border border-red-200{% else %}bg-blue-50 text-blue-800 border border-blue-200{% endif %}"
                         x-data="{ show: true }"
                         x-show="show"
                         x-init="setTimeout(() => show = false, 5000)"
                         x-transition.opacity.duration.300ms
                    >
                        {{ message.message }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {# Page content #}
        <div class="px-8 py-6 fade-in">
            {% block content %}{% endblock %}
        </div>
    </main>
</body>
</html>
