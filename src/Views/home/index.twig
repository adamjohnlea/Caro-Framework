{% extends "layouts/base.twig" %}

{% block title %}{{ appName }}{% endblock %}

{% block page_header %}
    <h1 class="text-sm font-semibold text-text-primary">Dashboard</h1>
{% endblock %}

{% block content %}
<div class="max-w-2xl space-y-6">
    <div class="bg-surface-raised border border-border rounded-xl p-8">
        <h2 class="text-lg font-semibold text-text-primary mb-2">Welcome</h2>
        <p class="text-sm text-text-secondary mb-6">
            Your project is set up and ready to go. Start building by adding modules to <code class="text-xs bg-accent-subtle px-1.5 py-0.5 rounded">src/Modules/</code>.
        </p>
        <div class="flex gap-3">
            <a href="/health" class="inline-flex items-center px-4 py-2 text-sm font-medium text-surface-raised bg-accent hover:bg-accent-hover rounded-lg transition-colors">
                Health Check
            </a>
        </div>
    </div>

    <div class="bg-surface-raised border border-border rounded-xl p-8">
        <h3 class="text-sm font-semibold text-text-primary mb-4">Modules</h3>
        <div class="space-y-2.5">
            {% for module in modules %}
            <div class="flex items-center gap-3">
                {% if module.enabled %}
                    <span class="flex items-center justify-center w-5 h-5 rounded-full bg-success/10">
                        <svg class="w-3 h-3 text-success" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6L9 17l-5-5"/></svg>
                    </span>
                {% else %}
                    <span class="flex items-center justify-center w-5 h-5 rounded-full bg-accent-subtle">
                        <span class="w-2 h-2 rounded-full bg-text-muted"></span>
                    </span>
                {% endif %}
                <span class="text-sm {{ module.enabled ? 'text-text-primary' : 'text-text-muted' }}">{{ module.label }}</span>
                <span class="text-xs {{ module.enabled ? 'text-success' : 'text-text-muted' }}">{{ module.enabled ? 'Enabled' : 'Disabled' }}</span>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
